          <a href="./assets/gallery_images/gallery (<%= i %> of 74).jpg" target="_blank">
            <img class="image js-gallery-modal-trigger" data-number="<%= i %>" data-src="../assets/gallery_images/gallery (<%= i %> of 74).jpg">
